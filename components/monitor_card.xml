<?xml version="1.0" encoding="UTF-8"?>
<component>
  <api>
    <prop name="title" type="string" default="监控参数"/>
    <prop name="value" type="string" default="0"/>
    <prop name="unit" type="string" default=""/>
    <prop name="color_dark" type="color" default="0x009966"/>
    <prop name="color_light" type="color" default="0x99CC66"/>
  </api>

  <view extends="lv_obj" width="250" height="280"
        style_bg_opa="0"
        style_border_width="0"
        style_pad_all="0"
        flex_flow="row">
    <lv_obj width="50%" height="100%"
            style_bg_color="$color_dark"
            style_border_width="0"
            style_pad_all="0"
            style_flex_flow="column"
            style_flex_main_place="center"
            style_flex_cross_place="center">
      <lv_label text="监控" width="content">
        <style name="style_monitor_title"/>
      </lv_label>
      <lv_label text="$title" width="content">
        <style name="style_monitor_title"/>
      </lv_label>
    </lv_obj>

    <lv_obj width="50%" height="100%"
            style_bg_color="$color_light"
            style_border_width="0"
            style_pad_all="0"
            style_flex_flow="column"
            style_flex_main_place="center"
            style_flex_cross_place="center">
      <lv_label text="$value" width="content">
        <style name="style_monitor_value"/>
      </lv_label>
      <lv_label text="$unit" width="content" style_text_color="#COLOR_BLACK"/>
    </lv_obj>
  </view>
</component>
