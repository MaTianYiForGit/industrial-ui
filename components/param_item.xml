<?xml version="1.0" encoding="UTF-8"?>
<component>
  <api>
    <prop name="label" type="string" default=""/>
    <prop name="value" type="string" default="0"/>
    <prop name="unit" type="string" default=""/>
  </api>

  <view extends="lv_obj" width="280" height="48"
        style_bg_color="#COLOR_WHITE"
        style_border_color="#COLOR_GRAY_LIGHT"
        style_border_width="1"
        style_pad_all="0"
        flex_flow="row"
        flex_main_place="space_between"
        flex_cross_place="center">
    <lv_label text="$label" width="120" style_pad_left="8">
      <style name="style_param_label"/>
    </lv_label>

    <lv_obj width="150" height="content"
            style_bg_opa="0"
            style_border_width="0"
            flex_flow="row"
            flex_main_place="end"
            flex_cross_place="center"
            style_pad_right="8">
      <lv_label text="$value" width="100">
        <style name="style_param_value"/>
      </lv_label>

      <lv_label text="$unit" width="40">
        <style name="style_param_unit"/>
      </lv_label>
    </lv_obj>
  </view>
</component>
