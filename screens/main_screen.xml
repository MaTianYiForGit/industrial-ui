<?xml version="1.0" encoding="UTF-8"?>
<screen>
  <view width="800" height="480"
        style_bg_color="#COLOR_BG_MAIN"
        style_pad_all="0"
        flex_flow="column">
    <lv_obj width="100%" height="50"
            style_bg_opa="0"
            style_border_width="0"
            style_pad_all="0"
            flex_flow="row"
            flex_align="space_between center">
      <lv_obj width="330" height="50"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="row">
        <status_btn text="联机" bg_color="#COLOR_STATUS_BLUE"/>
        <status_btn text="运行" bg_color="#COLOR_STATUS_GREEN"/>
        <status_btn text="本地" bg_color="#COLOR_STATUS_PINK"/>
      </lv_obj>

      <lv_obj width="250" height="50"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="row">
        <lv_button width="125" height="40"
                   style_bg_color="#COLOR_STATUS_ORANGE"
                   style_border_width="0"
                   style_radius="0">
          <lv_label text="故障代码" style_text_color="#COLOR_WHITE" align="center"/>
        </lv_button>
        <lv_obj width="125" height="40"
                style_bg_color="#COLOR_WHITE"
                style_border_color="#COLOR_GRAY_LIGHT"
                style_border_width="1"
                style_pad_all="0"
                flex_flow="row"
                flex_align="center center">
          <lv_label text="-" style_text_color="#COLOR_BLACK"/>
        </lv_obj>
      </lv_obj>

      <lv_obj width="220" height="50"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="column">
        <lv_obj width="100%" height="25"
                style_bg_color="#COLOR_WHITE"
                style_border_color="#COLOR_GRAY_LIGHT"
                style_border_width="1"
                style_pad_all="0"
                flex_flow="row"
                flex_align="center center">
          <lv_label text="2025 年 02 月 20 日 12:00" style_text_color="#COLOR_BLACK"/>
        </lv_obj>
        <lv_button width="100%" height="25"
                   style_bg_color="#COLOR_STATUS_YELLOW"
                   style_border_width="0"
                   style_radius="0">
          <lv_label text="厂家信息" style_text_color="#COLOR_BLACK" align="center"/>
        </lv_button>
      </lv_obj>
    </lv_obj>

    <lv_obj width="100%" height="350"
            style_bg_opa="0"
            style_border_width="0"
            style_pad_all="0"
            flex_flow="row"
            flex_align="space_between start">
      <lv_obj width="280" height="100%"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="column">
        <param_item label="输出能量值" value="60.0" unit="kW"/>
        <param_item label="输入交流电压值" value="380" unit="V"/>
        <param_item label="输入交流电流值" value="120.5" unit="A"/>
        <param_item label="直流母线电压值" value="540" unit="V"/>
        <param_item label="直流母线电流值" value="90.0" unit="A"/>
        <param_item label="输出高频电压值" value="2500" unit="V"/>
        <param_item label="输出高频电流值" value="120.0" unit="A"/>
        <param_item label="输出频率值" value="30.0" unit="kHz"/>
        <param_item label="能量使用率" value="75.0" unit="%"/>
      </lv_obj>

      <lv_obj width="260" height="100%"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="column"
              flex_align="start center">
        <monitor_card title="参数号"
                      value="040"
                      unit=""
                      color_dark="#COLOR_MONITOR_GREEN_DARK"
                      color_light="#COLOR_MONITOR_GREEN_LIGHT"/>

        <lv_obj width="100%" height="70"
                style_bg_opa="0"
                style_border_width="0"
                style_pad_top="10"
                flex_flow="column">
          <lv_obj width="100%" height="30"
                  style_bg_color="#COLOR_WHITE"
                  style_border_color="#COLOR_GRAY_LIGHT"
                  style_border_width="1"
                  style_pad_all="0"
                  flex_flow="row"
                  flex_align="space_between center">
            <lv_label text="数字输入端子状态值"
                      style_text_color="#COLOR_GRAY_TEXT"
                      style_pad_left="8"/>
            <lv_label text="'F0AC"
                      style_text_color="#COLOR_BLACK"
                      style_pad_right="8"/>
          </lv_obj>
          <lv_obj width="100%" height="30"
                  style_bg_color="#COLOR_WHITE"
                  style_border_color="#COLOR_GRAY_LIGHT"
                  style_border_width="1"
                  style_pad_all="0"
                  flex_flow="row"
                  flex_align="space_between center">
            <lv_label text="数字输出端子状态值"
                      style_text_color="#COLOR_GRAY_TEXT"
                      style_pad_left="8"/>
            <lv_label text="'F000"
                      style_text_color="#COLOR_BLACK"
                      style_pad_right="8"/>
          </lv_obj>
        </lv_obj>
      </lv_obj>

      <lv_obj width="260" height="100%"
              style_bg_opa="0"
              style_border_width="0"
              style_pad_all="0"
              flex_flow="column"
              flex_align="start center">
        <monitor_card title="参数值"
                      value="60.0"
                      unit="kW"
                      color_dark="#COLOR_MONITOR_BLUE_DARK"
                      color_light="#COLOR_MONITOR_BLUE_LIGHT"/>

        <lv_obj width="100%" height="70"
                style_bg_opa="0"
                style_border_width="0"
                style_pad_top="10"
                flex_flow="column">
          <lv_obj width="100%" height="30"
                  style_bg_color="#COLOR_WHITE"
                  style_border_color="#COLOR_GRAY_LIGHT"
                  style_border_width="1"
                  style_pad_all="0"
                  flex_flow="row"
                  flex_align="space_between center">
            <lv_label text="模拟信号 1 转换值"
                      style_text_color="#COLOR_GRAY_TEXT"
                      style_pad_left="8"/>
            <lv_label text="'0250"
                      style_text_color="#COLOR_BLACK"
                      style_pad_right="8"/>
          </lv_obj>
          <lv_obj width="100%" height="30"
                  style_bg_color="#COLOR_WHITE"
                  style_border_color="#COLOR_GRAY_LIGHT"
                  style_border_width="1"
                  style_pad_all="0"
                  flex_flow="row"
                  flex_align="space_between center">
            <lv_label text="模拟信号 2 转换值"
                      style_text_color="#COLOR_GRAY_TEXT"
                      style_pad_left="8"/>
            <lv_label text="'0000"
                      style_text_color="#COLOR_BLACK"
                      style_pad_right="8"/>
          </lv_obj>
        </lv_obj>
      </lv_obj>
    </lv_obj>

    <lv_obj width="100%" height="80"
            style_bg_opa="0"
            style_border_width="0"
            style_pad_all="0"
            flex_flow="row">
      <nav_tab text="主控界面" bg_color="#COLOR_NAV_GRAY"/>
      <nav_tab text="数据监控" bg_color="#COLOR_NAV_BLUE"/>
      <nav_tab text="参数设定" bg_color="#COLOR_NAV_GREEN"/>
      <nav_tab text="分段设定" bg_color="#COLOR_NAV_GRAY"/>
      <nav_tab text="故障信息" bg_color="#COLOR_NAV_ORANGE"/>
    </lv_obj>
  </view>
</screen>
